# interfaces(5) file used by ifup(8) and ifdown(8)

auto lo
	iface lo inet loopback

allow-hotplug eth0
	iface eth0 inet static
	address 0.0.0.0
	post-up ifconfig eth0 txqueuelen 1000

allow-hotplug wlan0
	iface wlan0 inet manual
	hostapd /etc/hostapd/hostapd_0.conf

allow-hotplug wlan1
	iface wlan1 inet manual
	hostapd /etc/hostapd/hostapd_1.conf

allow-hotplug br-lan
	iface br-lan inet static
	bridge_ports lan1 lan2 lan3 lan4 wlan0 wlan1
	address 192.168.1.1
	netmask 255.255.255.0
	network 192.168.1.0
	broadcast 192.168.1.255
	dns-nameserver 8.8.8.8 8.8.4.4

allow-hotplug wan
	iface wan inet dhcp
	hwaddress ether 12:34:56:78:90:AB
	post-up /etc/iptables
